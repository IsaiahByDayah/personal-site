{
  "name": "personal-site",
  "private": true,
  "description": "My personal site and blog powered by NextJS and Prismic",
  "version": "2.0.0",
  "author": "Isaiah Smith <jordankid93@gmail.com>",
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build",
    "start": "next start",
    "lint": "next lint && tsc --noEmit --incremental",
    "format": "prettier --check \"**/*.{js,jsx,ts,tsx,json,md}\"",
    "format:fix": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md}\"",
    "test": "node --experimental-strip-types --test **/*.test.ts",
    "test:watch": "node --experimental-strip-types --test --watch **/*.test.ts"
  },
  "dependencies": {
    "clsx": "^2.1.1",
    "next": "15.1.6",
    "next-plausible": "^3.12.4",
    "react": "19.0.0",
    "react-dom": "19.0.0",
    "react-icons": "^5.4.0",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "^4.4.1",
    "@tailwindcss/forms": "^0.5.10",
    "@tailwindcss/typography": "^0.5.16",
    "@types/node": "22.13.1",
    "@types/react": "19.0.8",
    "@types/react-dom": "19.0.3",
    "autoprefixer": "^10.4.20",
    "eslint": "^8.6.0",
    "eslint-config-next": "15.1.6",
    "eslint-config-prettier": "^8.2.0",
    "postcss": "^8.5.1",
    "prettier": "^3.4.2",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "tailwindcss": "3",
    "typescript": "5.1"
  },
  "pnpm": {
    "overrides": {
      "@types/react": "19.0.8",
      "@types/react-dom": "19.0.3"
    }
  }
}
